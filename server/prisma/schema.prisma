// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  location    String
  address     String
  rating      Float
  photos      String[]
  rooms       Room[]
  bookings    Booking[]
}

model Room {
  id         Int       @id @default(autoincrement())
  hotelId    Int
  hotel      Hotel     @relation(fields: [hotelId], references: [id])
  name       String
  guests     Int
  beds       Int
  rent       Float
  photos     String[]
  inclusions String[]
  bookings   Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  hotelId   Int
  hotel     Hotel    @relation(fields: [hotelId], references: [id])
  roomId    Int
  room      Room     @relation(fields: [roomId], references: [id])
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  checkIn   DateTime
  checkOut  DateTime
  cancelled Boolean
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  phone    String
  deviceId String
  bookings Booking[]
}
